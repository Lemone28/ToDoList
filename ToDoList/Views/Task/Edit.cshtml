@{
	ViewData["Title"] = "Edit";
}
@model EditModel

<form method="post" asp-action="Edit" asp-controller="Task">
    <input type="hidden" asp-for="@Model.Task.Id" />
    <input type="hidden" asp-for="@Model.Task.UserId" />
    <div class="container">
        <div class="form-group">
            <label asp-for="@Model.Task.Name">Name</label>
            <input type="text" asp-for="@Model.Task.Name" class="form-control" />
            <span asp-validation-for="@Model.Task.Name" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Task.Content">Content</label>
            <textarea asp-for="@Model.Task.Content" class="form-control"></textarea>
            <span asp-validation-for="@Model.Task.Content" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Task.PriorityId">Priority</label>
            <select asp-for="@Model.Task.PriorityId" class="form-control">
                @foreach (var p in PriorityEntityHelper.DefaultPriorities)
                {
                    <option value="@p.Id">@p.Name</option>
                }
            </select>
            <span asp-validation-for="@Model.Task.PriorityId" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Task.StateId">State</label>
            <select asp-for="@Model.Task.StateId" class="form-control">
                @foreach (var p in StateEntityHelper.DefaultStates)
                {
                    <option value="@p.Id">@p.Name</option>
                }
            </select>
            <span asp-validation-for="@Model.Task.StateId" class="text-danger" />
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </div>
</form>
