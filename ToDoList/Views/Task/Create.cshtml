@{
	ViewData["Title"] = "Create";
}
@model CreateModel

<form method="post" asp-action="Create" asp-controller="Task">
    <input type="hidden" asp-for="@Model.Task.StateId" />
    <input type="hidden" asp-for="@Model.Task.UserId" />
    <div class="container">
        <div class="form-group">
            <label asp-for="@Model.Task.Name">Name</label>
            <input type="text" asp-for="@Model.Task.Name" class="form-control" required />
            <span asp-validation-for="@Model.Task.Name" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Task.Content">Content</label>
            <textarea asp-for="@Model.Task.Content" class="form-control"></textarea>
            <span asp-validation-for="@Model.Task.Content" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Task.PriorityId">Priority</label>
            <select asp-for="@Model.Task.PriorityId" class="form-control">
                @foreach (var p in Model.Priorities)
                {
                    <option value="@p.Id">@p.Name</option>
                }
            </select>
            <span asp-validation-for="@Model.Task.PriorityId" class="text-danger" />
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>


